        <h1>NBVS PLAYER</h1>
        <div class="search-el">
            <div class="searchbox">
              <input type="search" id="form1" class="form-control" />
              <label class="form-label" for="form1">Search</label>
            </div>
            <button type="button" class="btn btn-primary" id="submitBtn">
              <i class="fas fa-search"></i>
            </button>
          </div>
        <hr>
        <!-- tracks header -->
        <div class="tracks" id="tracks">
            <p>All Tracks</p>
        </div>
        <hr>
        <!-- tracks container -->
        <div class="songsContainer container-fluid " id="songsContainer">
        </div>
    </div>
        <hr>

        <!-- music player -->
        <div class="playerContainer" id="playerContainer">
            <!-- Container for song name and singer-->
            <h2 id="title">Mann Bharryaa - 2.0</h2>
            <h3 id="singer">B Park</h3>
            <audio src="public/assets/audio/Mann Bharryaa 2.0.mp3" controls hidden></audio>
            <!-- Div for progress bar -->
           
            <div class="progressContainer" id="progressContainer">
                <div class="progress" id="progress"></div>
                <div class="playTime" id="playTime">
                    <span id="currentTime">0.0</span>
                    <span id="Duration">4.26</span>
                </div>

            </div>
            <!-- controls -->
            <div class="controls" id="controls">
                <i class="fas fasControls fa-backward" id="prev" title="previous"></i>
                <i class="fas fasControls fa-play" id="play" title="play"></i>
                <i class="fas fasControls fa-forward" id="next" title="next"></i>
            </div>
        </div>


